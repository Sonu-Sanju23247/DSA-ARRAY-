// 5. Maximum value  and Minimum value from the given  array

       
        public class Main{
    public static void main(String[] args){
        int arr[]={1,2,5,3};
        int max= Integer.MIN_VALUE;
        int min= Integer.MAX_VALUE;
        for(int i=0;i<4;i++){
            if(arr[i]>max){
                max=arr[i];

            }
        }
        System.out.println("the max is :"+max);
        System.out.println("the min is :"+min);

        for(int i=0;i<4;i++){
            if(arr[i]<min){
                min=arr[i];
            }
        }
        System.out.println("the min is"+min);
}
     
