//3.Calculate the sum of the elements of the two given array by user input:
public class Main{
    public  static void  Sum(int arr1[],int arr2[]){
        int sum=0;
        for(int  i=0;i<arr1.length;i++) {
            for (int j = 0; j < arr2.length; j++) {
                sum = sum + arr1[i] + arr2[j];
            }
        }
        System.out.println("The sum of the two  array elements is:"+sum);
    }

    public static void main(String[] args) {
        Scanner sc=new Scanner (System.in);
        System.out.println("enter the length of the array1:");
        int n1=sc.nextInt();
        int arr1[]=new int[n1];
        System.out.println("enter the  elements of the array 1:");
        int i=0;
        for( i=0;i<arr1.length;i++){
            arr1[i]=sc.nextInt();
        }
        System.out.println("the array 1 elemets are:");
        for(i=0;i<arr1.length;i++){
            System.out.println(arr1[i]);
        }
        System.out.println("enter the length of the array2:");
        int n2=sc.nextInt();
        int arr2[]=new int[n2];
        System.out.println("enter the  elements of the array 2:");
        int j=0;
        for( j=0;j<arr2.length;j++){
            arr2[j]=sc.nextInt();
        }
        System.out.println("the array 2 elemets are:");
        for(j=0;j<arr2.length;j++){
            System.out.println(arr2[j]);
        }
        Sum(arr1,arr2);
    }
}
   
