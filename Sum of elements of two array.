  // 4. Sum  elements of the two Arrays

     
        public class Main{
    public static void main(String[] args){
        int arr_1[]={1,2,3};
        int arr_2[]={4,5,6};
        int sum=0;
        for(int i=0;i<3;i++) {
                sum = sum+arr_1[i] + arr_2[i];
        }
        System.out.println("the sum is:"+ sum);
}
}
   
